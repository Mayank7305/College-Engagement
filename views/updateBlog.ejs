<%- include('../partials/header'); -%>
<h1 id = "a_name"  style = "text-align: center;">
    college Engagement 
</h1>
<section>
    <a href = "/blog/<%= blog.id %>" ><i class="material-icons">arrow_back</i> Back</a>
    <div class = "container1 mt-3">
        <form action = "/blog/<%= blog.id %>" method = "post" novalidate class = "validated-form" enctype="multipart/form-data">
            <h2>Update Blog</h2>
            <div class = "form-group">
                <label class = "form-label" for = "title">Title</label>
                <input class = "form-control" type = "text" name = "title" id = "title" value = "<%= blog.title %>" required>
            </div>
        
            <div class = "form-group">
                <label class = "form-label" for = "image">Upload Image</label>
                <input type = "file" name = "image" id = "image" multiple>
            </div>
            <div class = "form-group">
                <label class = "form-label" for = "message">content</label>
                <textarea class = "form-control" name = "message" id = "message" cols = "30" rows = "10" required>"<%= blog.message %>"</textarea>
            </div>
            <h6>Select Checkboxes To delete Images</h5>
            <div class = "mb-3">
                
                <% blog.images.forEach(function(img,i){ %>
                    
                    <img src = "<%= img.thumbnail %>" class = "img-thumbnail" alt = ".."> 
                    <div class = "form-check-inline">
                        <input type ="checkbox" id = "image-<%=i%>" name ="deleteImages[]" value="<%=img.filename%>">
                        <label for ="image-<%=i%>"></label>
                    </div>
                    
                    
                <% }) %>
            </div>
            <button type = "submit">Post</button>
        </form>
    </div>
</section>

<%- include('../partials/footer'); -%>
<%- include('../partials/script'); -%>