<%- include('../partials/header'); -%>
<h1 id = "a_name" style = "text-align: center;">
    college Engagement
</h1>

<section>
    <a href = "/blog" ><i class="material-icons">arrow_back</i> Back</a>
    <div class = "container1">
        <form action = "/blog" method = "post" novalidate class = "validated-form" enctype="multipart/form-data">
            <h2>Have An Idea ? Post it</h2>
            <div class = "form-group mb-4">
                <label class = "form-label" for = "title">Title</label>
                <!-- <input class = "form-control" type = "text" name = "title" id = "title" required> -->
                <select name = "title" id = "color">
                    <option value = "Blog" selected name = "blog">Blog</option>
                    <option value = "Notice"<% if(!currentUser.admin) { %> 
                        disabled 
                        <% } %>   name = "notice">Notice</option>
                </select>
 
            </div>
            <div class="input-group mb-3">
                <input type="file" class="form-control" id="image" name = "image" multiple>
                <label class="input-group-text" for="image" >Upload image(s)</label>
            </div>
            <!-- <input type = "file" name = "image" id = "" multiple> -->
            <!-- <div class = "form-group">
                <label  for = "link">Image Link</label>
                <input  type = "text" name = "link" id = "link">
            </div> -->
            <div class = "form-group">
                <label class = "form-label" for = "message">Content</label>
                <textarea class = "form-control" name = "message" id = "message" cols = "30" rows = "10" required></textarea>
            </div>
            <button type = "submit">Post</button>
        </form>
    </div>
</section>

<%- include('../partials/footer'); -%>
<%- include('../partials/script'); -%>